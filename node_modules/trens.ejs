            <option value=""></option>
            <option value=""></option>
          </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Enviar</button>
      </form>
    </main>

    <footer>
        <%- include ('footer') %>
    </footer>

    <script src="js/bootstrap.bundle.min.js"></script>
</body>
</html>


          